<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>Ronin Developer Blog</title>
  <icon>http://ronin-ruby.github.io/images/favicon.ico</icon>
  <logo>http://ronin-ruby.github.io/images/logo.png</logo>
  <link type="application/atom+xml" href="http://ronin-ruby.github.io/blog/atom.xml" rel="self" />
  <link type="text/html" href="http://ronin-ruby.github.io/blog/" />
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>http://ronin-ruby.github.io/blog/</id>
  {% for post in site.categories.blog %}
  <entry>
    <title>{{ post.title }}</title>
    <link href="http://ronin-ruby.github.io{{ post.url }}" />
    <updated>{{ post.date | date_to_xmlchema }}</updated>
    <author>
      <name>{{ post.author }}</name>
    </author>
    <id>http://ronin-ruby.github.io{{ post.url }}</id>
    <content type="html">{{ post.content | xml_escape }}</content>
  </entry>
  {% endfor %}
</feed>
